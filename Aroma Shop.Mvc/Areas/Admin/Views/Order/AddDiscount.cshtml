@model Aroma_Shop.Domain.Models.ProductModels.Discount

@{
    ViewData["Title"] = "افزودن کد تخفیف";
}
<div class="h2 mt-3">
    <h1 class="h2 d-inline">افزودن کد تخفیف</h1>
    <a class="btn btn-warning float-left" asp-action="Discounts">بازگشت</a>
</div>
<hr>
<div class="row">
    <div class="col-lg-7 col-md-9 col-sm-12 m-auto">
        <form asp-action="AddDiscount">
            <div class="form-group">
                <label class="control-label" for="CategoryName">کد تخفیف</label>
                <input class="form-control" asp-for="DiscountCode">
                <span class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label class="control-label" for="CategoryName">میزان تخفیف</label>
                <input class="form-control" asp-for="DiscountPrice">
                <span class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-block btn-primary">
            </div>
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3" role="alert">@ViewData["SuccessMessage"]</div>
            }
            <div class="alert alert-danger text-left mt-3" role="alert" asp-validation-summary="All"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}