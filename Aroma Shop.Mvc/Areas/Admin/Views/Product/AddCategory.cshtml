@model Aroma_Shop.Application.ViewModels.Product.AddCategoryViewModel

@{
    ViewData["Title"] = "افزودن دسته بندی";
}
<div class="h2 mt-3">
    <h1 class="h2 d-inline">دسته بندی ها</h1>
    <a class="btn btn-warning float-left" asp-controller="Product" asp-action="Categories">بازگشت</a>
</div>
<hr>
<div class="row">
    <div class="col-lg-7 col-md-9 col-sm-12 m-auto">
        <form action="/Admin/Products/AddCategory" method="post">


            <div class="form-group">
                <label class="control-label" for="CategoryName">نام</label>
                <input class="form-control" asp-for="@Model.Category.CategoryName">
                <span class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات</label>
                <textarea class="form-control" asp-for="@Model.Category.CategoryDescription"></textarea>
                <span class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <select class="form-control">
                    <option>منو تست</option>
                    <option>منو تست</option>
                    <option>منو تست</option>
                    <option>&nbsp;&nbsp;منو تست</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-block btn-primary">
            </div>
        </form>
    </div>
</div>