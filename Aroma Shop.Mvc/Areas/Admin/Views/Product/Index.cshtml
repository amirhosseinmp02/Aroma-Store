@model IEnumerable<Aroma_Shop.Domain.Models.ProductModels.Product>

@{
    ViewData["Title"] = "محصولات";
}

<div class="h2 mt-3">
    <h1 class="h2 d-inline">محصولات</h1>
    <a class="btn btn-warning float-left" asp-controller="Product" asp-action="AddCategory">افزودن</a>
</div>
<hr />
@if (!Convert.ToBoolean(ViewBag.isEmpty))
{
    <form asp-action="Index" method="get">
        <div class="input-group mb-4">
            <input name="search" type="text" value="@ViewBag.search" class="form-control" placeholder="جستجو..." aria-label="جستجو...">
            <button type="submit" class="input-group-text" id="search-textbox">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"></path>
                </svg>
            </button>
        </div>
    </form>
    <table class="table table-striped table-bordered text-center table-light">
        <thead>
            <tr>
                <th class="cart-item-cells">تصویر</th>
                <th class="cart-item-cells">نام</th>
                <th class="cart-item-cells">قیمت</th>
                <th class="cart-item-cells">عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <th class="cart-item-cells"><img class="admin-products" src="~/img/Products/@product.Images.FirstOrDefault().ImageName"></th>
                    <td class="cart-item-cells align-middle">@product.ProductName</td>
                    <td class="cart-item-cells align-middle">@product.ProductPrice</td>
                    <td class="align-middle">
                        <div class="admin-products-actions">
                            <a class="btn text-light btn-primary" asp-route-Id="@product.ProductId">ویرایش</a>
                            <a class="btn text-light btn-primary" asp-route-Id="@product.ProductId">حذف</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    @Html.PartialAsync("PartialPaging", "Index")
}
else
{
    <div class="alert alert-danger text-left" role="alert">محصولی برای نمایش وجود ندارد</div>
}
