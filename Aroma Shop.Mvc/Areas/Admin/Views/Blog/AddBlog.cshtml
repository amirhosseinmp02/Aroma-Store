@model Aroma_Shop.Application.ViewModels.BlogModels.AddBlogViewModel

@{
    ViewData["Title"] = "افزودن مطلب";
}

@section Styles
{
    <style>
        .custom-file-input ~ .custom-file-label::after {
            content: "انتخاب";
        }
    </style>
}

<div class="h2 mt-3">
    <h1 class="h2 d-inline">افزودن مطلب</h1>
    <a class="btn btn-warning float-left" asp-action="Index">بازگشت</a>
</div>

<div class="col-lg-10 col-md-12 m-auto">
    <form asp-action="AddBlog">
        <div class="form-row mb-4">
            <div class="form-group">
                <label class="control-label">عنوان مطلب</label>
                <input class="form-control" id="pagetitle" asp-for="BlogTitle">
                <span class="text-danger field-validation-valid"></span>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label">شرح کوتاه</label>
            <textarea asp-for="BlogShortDescription" rows="3" class="form-control none-resize">
                </textarea>
            <span class="text-danger field-validation-valid"></span>
        </div>
        <div class="form-group">
            <textarea id="editor" asp-for="BlogDescription"></textarea>
            <span class="text-danger field-validation-valid"></span>
        </div>
        <div class="custom-file mb-3" id="customFile" lang="es">
            <input type="file" class="custom-file-input" id="exampleInputFile" aria-describedby="fileHelp" asp-for="BlogImage">
            <label class="custom-file-label" for="exampleInputFile">
                انتخاب عکس مطلب
            </label>
        </div>
        <div class="form-group">
            <label>دسته بندی ها</label>
            <select class="form-control" size="9" multiple aria-label="select example" asp-items="Model.BlogCategories" asp-for="BlogCategoriesId"></select>
        </div>
        <div class="form-group">
            <input type="submit" value="افزودن" class="btn btn-block btn-primary">
        </div>
        @if (ViewData["SuccessMessage"] != null)
        {
            <div class="alert alert-success mt-3" role="alert">@ViewData["SuccessMessage"]</div>
        }
        <div class="alert alert-danger text-left mt-3" role="alert" asp-validation-summary="All"></div>
    </form>
</div>