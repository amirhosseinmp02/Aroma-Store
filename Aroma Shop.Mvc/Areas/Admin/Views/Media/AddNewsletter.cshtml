@model Aroma_Shop.Application.ViewModels.Newsletter.AddNewsletterViewModel

@{
    ViewData["Title"] = "افزودن کاربر خبرنامه";
}
<div class="h2 mt-3">
    <h1 class="h2 d-inline">افزودن کاربر خبرنامه</h1>
    <a class="btn btn-warning float-left" asp-action="Newsletters">بازگشت</a>
</div>
<hr>
<div class="row">
    <div class="col-lg-7 col-md-9 col-sm-12 m-auto">
        <form asp-action="AddNewsletter">
            <div class="form-group">
                <label class="control-label">ایمیل کاربر</label>
                <input class="form-control" asp-for="CustomerEmail">
                <span class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-block btn-primary">
            </div>
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3" role="alert">@ViewData["SuccessMessage"]</div>
            }
            <div class="alert alert-danger text-left mt-3" role="alert" asp-validation-summary="All"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}