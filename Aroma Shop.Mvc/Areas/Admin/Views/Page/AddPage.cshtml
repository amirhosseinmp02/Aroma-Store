@model Aroma_Shop.Domain.Models.PageModels.Page

@{
    ViewData["Title"] = "افزودن صفحه";
}
<div class="h2 mt-3">
    <h1 class="h2 d-inline">افزودن صفحه</h1>
    <a class="btn btn-warning float-left" asp-action="Index">بازگشت</a>
</div>
<hr>
<div class="row">
    <div class="col-lg-10 col-md-12 m-auto">
        <form asp-action="">
            <div class="form-group">
                <label class="control-label">عنوان</label>
                <input class="form-control">
                <span class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label class="control-label">پیوند یکتا</label>
                <input class="form-control">
                <span class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <label class="control-label">توضیحات</label>
                <div id="editor"></div>
                <span class="text-danger field-validation-valid"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="افزودن" class="btn btn-block btn-primary">
            </div>
            @if (ViewData["SuccessMessage"] != null)
            {
                <div class="alert alert-success mt-3" role="alert">@ViewData["SuccessMessage"]</div>
            }
            <div class="alert alert-danger text-left mt-3" role="alert" asp-validation-summary="All"></div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdn.ckeditor.com/ckeditor5/28.0.0/classic/ckeditor.js"></script>
    <script>
        ClassicEditor
            .create(document.querySelector('#editor'),
                {
                    language: 'fa',
                    heading: {
                        options: [
                            { model: 'paragraph', title: 'پاراگراف', class: 'ck-heading_paragraph' },
                            { model: 'heading1', view: 'h1', title: 'هدر 1', class: 'ck-heading_heading1' },
                            { model: 'heading2', view: 'h2', title: 'هدر 2', class: 'ck-heading_heading2' },
                            { model: 'heading3', view: 'h3', title: 'هدر 3', class: 'ck-heading_heading3' }
                        ]
                    },
                    ckfinder: { uploadUrl: '/index/UploadImage' }
                })
            .catch(error => {
                console.error(error);
            });
        $(document).ready(function () {
            //$(".ck-blurred").css("min-height", "400px");
            //$(".ck-content").css("min-height", "400px");
        });
    </script>
}